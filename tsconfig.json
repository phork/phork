{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES2019", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "paths": {
      "assets": ["src/assets"],
      "components": ["src/components"],
      "config": ["src/config"],
      "hooks": ["src/hooks"],
      "icons": ["src/icons"],
      "modals": ["src/modals"],
      "pages": ["src/pages"],
      "postcss": ["src/postcss"],
      "styles": ["src/styles"],
      "utils": ["src/utils"],
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "ES2019",
    "typeRoots": ["node_modules/@types", "node_modules/@phork/phorkit/esm", "src/assetTypes", "src/environment"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "build"]
}
